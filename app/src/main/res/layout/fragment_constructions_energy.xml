<android.support.v4.widget.NestedScrollView android:id="@+id/scroll_form"
    android:layout_marginTop="8dp"
    android:layout_below="@id/bar"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_attack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="geolaxia.geolaxia.Activities.AttackActivity"
        tools:showIn="@layout/activity_attack"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/energyCentralText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Central de Energia"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <View
            android:id="@+id/energyCentralDivider"
            android:layout_below="@id/energyCentralText"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/energyCentralLevelText"
            android:layout_below="@id/energyCentralDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nivel actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyCentralProductionText"
            android:layout_below="@id/energyCentralLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Produccion actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/energyCentralBuildButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Construir Nivel "
            style="@style/Widget.AppCompat.Button"
            android:background="#80000000"
            android:textColor="#FFFFFF"
            android:layout_below="@id/energyCentralProductionText"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/energyCentralCostText"
            android:layout_below="@id/energyCentralBuildButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Costo: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyCentralTimeText"
            android:layout_below="@id/energyCentralCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tiempo de finalizacion: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyCentralNewProductionText"
            android:layout_below="@id/energyCentralTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Produccion por hora: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyCentral_timer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/energyCentralNewProductionText"
            android:layout_centerInParent="true"
            android:typeface="normal"
            android:textSize="8pt"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/energyFuelCentralText"
            android:layout_below="@id/energyCentral_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Central de Energia por Combustible"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <View
            android:id="@+id/energyFuelCentralDivider"
            android:layout_below="@id/energyFuelCentralText"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/energyFuelCentralLevelText"
            android:layout_below="@id/energyFuelCentralDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nivel actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentralProductionText"
            android:layout_below="@id/energyFuelCentralLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Produccion actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentralDarkMatterText"
            android:layout_below="@id/energyFuelCentralProductionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Materia oscura consumida actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/energyFuelCentralBuildButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/energyFuelCentralDarkMatterText"
            android:layout_centerInParent="true"
            android:background="#80000000"
            android:text="Construir Nivel "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/energyFuelCentralCostText"
            android:layout_below="@id/energyFuelCentralBuildButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Costo: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentralNextDarkMatterText"
            android:layout_below="@id/energyFuelCentralCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Consumo Materia Oscura: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentralTimeText"
            android:layout_below="@id/energyFuelCentralNextDarkMatterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tiempo de finalizacion: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentralNewProductionText"
            android:layout_below="@id/energyFuelCentralTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Produccion por hora: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/energyFuelCentral_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/energyFuelCentralNewProductionText"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:typeface="normal"
            android:textSize="8pt"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/solarPanelText"
            android:layout_below="@id/energyFuelCentral_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Paneles Solares"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <View
            android:id="@+id/solarPanelDivider"
            android:layout_below="@id/solarPanelText"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/solarPanelQttText"
            android:layout_below="@id/solarPanelDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cantidad actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/solarPanelPicker"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/solarPanelQttText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <NumberPicker
                    android:id="@+id/solarPanel"
                    android:background="#80000000"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <Button
                android:id="@+id/solarPanelBuildButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construir"
                style="@style/Widget.AppCompat.Button"
                android:background="#80000000"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/solarPanel"
                android:layout_toEndOf="@id/solarPanel"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/solarPanelCostText"
            android:layout_below="@id/solarPanelPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Costo: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/solarPanelTimeText"
            android:layout_below="@id/solarPanelCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tiempo de finalizacion: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/solarPanel_timer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/solarPanelTimeText"
            android:layout_centerInParent="true"
            android:typeface="normal"
            android:textSize="8pt"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/windTurbineText"
            android:layout_below="@id/solarPanel_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Turbinas Eolicas"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <View
            android:id="@+id/windTurbineDivider"
            android:layout_below="@id/windTurbineText"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/windTurbineQttText"
            android:layout_below="@id/windTurbineDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cantidad actual: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/windTurbinePicker"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/windTurbineQttText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <NumberPicker
                    android:id="@+id/windTurbine"
                    android:background="#80000000"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/windTurbineBuildButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Construir"
                    style="@style/Widget.AppCompat.Button"
                    android:background="#80000000"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/windTurbine"
                    android:layout_toEndOf="@id/windTurbine"
                    />

        </RelativeLayout>

        <TextView
            android:id="@+id/windTurbineCostText"
            android:layout_below="@id/windTurbinePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Costo: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/windTurbineTimeText"
            android:layout_below="@id/windTurbineCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tiempo de finalizacion: "
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/windTurbine_timer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/windTurbineTimeText"
            android:layout_centerInParent="true"
            android:typeface="normal"
            android:textSize="8pt"
            android:textColor="#FFFFFF"/>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>