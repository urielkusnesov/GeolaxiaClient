<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="geolaxia.geolaxia.Activities.HomeActivity"
    tools:showIn="@layout/activity_home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cristal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/cristal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cristal"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:text="Cristal"
        android:id="@+id/cristalText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cristalText"
        android:textColor="#ffffff"
        android:text="200"
        android:id="@+id/cristalQtt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/metal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cristal"
        android:layout_toEndOf="@+id/cristal"
        android:layout_marginLeft="19dp"
        android:id="@+id/metal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metal"
        android:layout_toRightOf="@+id/cristal"
        android:layout_toEndOf="@+id/cristal"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:text="Metal"
        android:id="@+id/metalText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metalText"
        android:layout_toRightOf="@+id/cristal"
        android:layout_toEndOf="@+id/cristal"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:text="200"
        android:id="@+id/metalQtt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/materia_oscura"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/metal"
        android:layout_toEndOf="@+id/metal"
        android:layout_marginLeft="19dp"
        android:id="@+id/materiaOscura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/materiaOscura"
        android:layout_toRightOf="@+id/metal"
        android:layout_toEndOf="@+id/metal"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:text="M. Oscura"
        android:id="@+id/darkMatterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/darkMatterText"
        android:layout_toRightOf="@+id/metal"
        android:layout_toEndOf="@+id/metal"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:text="200"
        android:id="@+id/darkMatterQtt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/energia"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/materiaOscura"
        android:layout_toEndOf="@+id/materiaOscura"
        android:layout_marginLeft="19dp"
        android:id="@+id/energia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/energia"
        android:layout_toRightOf="@+id/materiaOscura"
        android:layout_toEndOf="@+id/materiaOscura"
        android:layout_marginLeft="19dp"
        android:text="EnergÃ­a"
        android:textColor="#ffffff"
        android:id="@+id/energyText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/energyText"
        android:layout_toRightOf="@+id/materiaOscura"
        android:layout_toEndOf="@+id/materiaOscura"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:text="200"
        android:id="@+id/energyQtt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/energyQtt"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/planet" />

    <Spinner
        android:id="@+id/planetSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/planet"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/planetSpinner"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="#ffffff"
        android:id="@+id/levelText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/planetSpinner"
        android:layout_toRightOf="@+id/levelText"
        android:layout_toEndOf="@+id/levelText"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/weatherImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/planetSpinner"
        android:layout_toRightOf="@+id/weatherImage"
        android:layout_toEndOf="@+id/weatherImage"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:id="@+id/temperatureText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperatureText"
        android:layout_toRightOf="@+id/weatherImage"
        android:layout_toEndOf="@+id/weatherImage"
        android:layout_marginLeft="19dp"
        android:textColor="#ffffff"
        android:id="@+id/windText" />
</RelativeLayout>
