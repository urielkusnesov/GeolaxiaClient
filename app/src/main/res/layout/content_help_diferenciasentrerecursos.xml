<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_help_diferenciasentrerecursos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geolaxia.geolaxia.Activities.HelpActivity"
    tools:showIn="@layout/activity_help"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5pt"
                android:background="#FFFFFF"
                android:text="Diferencias entre Recursos"
                android:textStyle="bold"
                android:textSize="12pt"
                android:textColor="#000000"
                android:textAlignment="center"/>


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosCristal"
                android:layout_marginTop="5pt"
                android:text="Cristal"
                android:typeface="normal"
                android:textSize="10pt"
                android:textColor="#FFFFFF"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cristal"
                android:layout_gravity="center"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosCristalDescripcion"
                android:text="Material base para todo tipo de construcción. Mayor concentración en los planetas azules."
                android:typeface="normal"
                android:textSize="8pt"
                android:textColor="#FFFFFF"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosMetal"
                android:layout_marginTop="5pt"
                android:text="Metal"
                android:typeface="normal"
                android:textSize="10pt"
                android:textColor="#FFFFFF"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/metal"
                android:layout_gravity="center"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosMetalDescripcion"
                android:text="Material base para todo tipo de construcción. Mayor concentración en los planetas blancos."
                android:typeface="normal"
                android:textSize="8pt"
                android:textColor="#FFFFFF"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosMateriaOscura"
                android:layout_marginTop="5pt"
                android:text="MateriaOscura"
                android:typeface="normal"
                android:textSize="10pt"
                android:textColor="#FFFFFF"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/materia_oscura"
                android:layout_gravity="center"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecursosMateriaOscuraDescripcion"
                android:text="Combustible para todo tipo de nave. Mayor concentración en los planetas negros."
                android:typeface="normal"
                android:textSize="8pt"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
