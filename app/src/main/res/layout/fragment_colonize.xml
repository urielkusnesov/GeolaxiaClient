<android.support.v4.widget.NestedScrollView android:id="@+id/scroll_form"
    android:layout_marginTop="8dp"
    android:layout_below="@id/bar"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="geolaxia.geolaxia.Activities.ColonizeActivity"
        tools:showIn="@layout/activity_colonize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5pt"
                        android:background="#FFFFFF"
                        android:text="Colonizadores"
                        android:textSize="12pt"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cantidad de Colonizadores disponibles: "
                            android:typeface="normal"
                            android:textSize="8pt"
                            android:textColor="#FFFFFF"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/colonization_cant_colonizadores_disponibles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:typeface="normal"
                            android:textSize="8pt"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5pt"
                        android:background="#FFFFFF"
                        android:text="Enviar Colonizadores"
                        android:textSize="12pt"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/targetText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Objetivo"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />
                        <View
                            android:id="@+id/targetDivider"
                            android:layout_below="@id/targetText"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginBottom="10dp"
                            android:background="#FFFFFF"/>

                        <RelativeLayout
                            android:id="@+id/targetPickers"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/targetDivider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <NumberPicker
                                android:id="@+id/galaxy"
                                android:background="#80000000"
                                android:descendantFocusability="blocksDescendants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <NumberPicker
                                android:id="@+id/solarSystem"
                                android:background="#80000000"
                                android:descendantFocusability="blocksDescendants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/galaxy"
                                android:layout_toEndOf="@+id/galaxy" />
                            <NumberPicker
                                android:id="@+id/planet"
                                android:background="#80000000"
                                android:descendantFocusability="blocksDescendants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/solarSystem"
                                android:layout_toEndOf="@+id/solarSystem" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/defense_cant_canones_construccion_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:typeface="normal"
                                android:textSize="8pt"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/colonization_enviar_boton"
                                style="?android:textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Enviar"
                                android:textStyle="bold" />
                            <Button
                                android:id="@+id/colonization_reset_boton"
                                style="?android:textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Borrar"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/colonization_volver_boton"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Volver"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
