<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geolaxia.geolaxia.Activities.DefenseQuestionActivity"
    tools:showIn="@layout/activity_defense_question"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TIEMPO FINALIZACIÃ“N"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/defense_preguntas_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="normal"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="PREGUNTAS"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/P1"
                    android:layout_marginTop="5pt"
                    android:text=""
                    android:typeface="normal"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"/>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/P1_R">
                    <RadioButton
                        android:id="@+id/P1_R1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P1"/>
                    <RadioButton
                        android:id="@+id/P1_R2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P1"/>
                    <RadioButton
                        android:id="@+id/P1_R3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P1"/>
                    <RadioButton
                        android:id="@+id/P1_R4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P1"/>
                    <RadioButton
                        android:id="@+id/P1_R5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/P2"
                    android:layout_marginTop="5pt"
                    android:text=""
                    android:typeface="normal"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"/>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/P2_R">
                    <RadioButton
                        android:id="@+id/P2_R1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P2"/>
                    <RadioButton
                        android:id="@+id/P2_R2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P2"/>
                    <RadioButton
                        android:id="@+id/P2_R3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P2"/>
                    <RadioButton
                        android:id="@+id/P2_R4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P2"/>
                    <RadioButton
                        android:id="@+id/P2_R5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P2"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/P3"
                    android:layout_marginTop="5pt"
                    android:text=""
                    android:typeface="normal"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"/>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/P3_R">
                    <RadioButton
                        android:id="@+id/P3_R1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P3"/>
                    <RadioButton
                        android:id="@+id/P3_R2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P3"/>
                    <RadioButton
                        android:id="@+id/P3_R3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P3"/>
                    <RadioButton
                        android:id="@+id/P3_R4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P3"/>
                    <RadioButton
                        android:id="@+id/P3_R5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:onClick="onRadioButtonClicked_P3"/>
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/defense_question_defender_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defender"
                style="@style/Widget.AppCompat.Button"
                android:background="#80000000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:textSize="15dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
